<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ise_app">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ISE_App"
        tools:targetApi="31">
        <activity
            android:name=".ui.theme.screens.HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.ISE_App" />
        <activity
            android:name=".HistoryScreen"
            android:exported="false"
            android:label="@string/title_activity_history_screen"
            android:theme="@style/Theme.ISE_App" />
        <activity
            android:name=".CalibrationScreen"
            android:exported="false"
            android:label="@string/title_activity_calibration_screen"
            android:theme="@style/Theme.ISE_App" />
        <activity
            android:name=".HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.ISE_App" /> <!-- Specify MainActivity as the launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.ISE_App"> <!-- Explicitly define exported attribute -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>